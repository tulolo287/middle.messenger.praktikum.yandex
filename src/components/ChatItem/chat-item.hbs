 <li class={{#if active}} "chat-item__active" {{else}} "chat-item" {{/if}}>
    <div class="chat-item__info__name">    
      <h3>{{title}}</h3>
      {{#if last_message}}
      <span>{{last_message.user.first_name}}: {{last_message.content}}</span>
    </div> 
  <div class="chat-item__info__time">
    {{#if unread_count }}
      <span class="bage">{{unread_count}}</span>
    {{/if}}
      <span>{{time}}</span>
  </div>
  {{/if}}
  </li>

