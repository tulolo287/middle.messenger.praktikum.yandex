{
  "name": "vite-messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "vite build && nodemon ./server.js",
    "preview": "vite preview",
    "lint:css": "stylelint '**/*.{css,sass,scss}' --fix",
    "lint:js": "eslint --fix --ext .ts --ignore-path .gitignore .",
    "lint:tsc": "tsc --noEmit",
    "lint": "eslint --fix --ext .ts --ignore-path .gitignore . && stylelint '**/*.{css,sass,scss}' --fix",
    "test": "./node_modules/.bin/mocha",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@types/chai": "4.3.11",
    "@types/mocha": "10.0.6",
    "@types/node": "20.10.4",
    "@types/sinon": "17.0.3",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "@typescript-eslint/parser": "6.14.0",
    "chai": "5.0.0",
    "cssnano": "6.0.1",
    "eslint": "8.55.0",
    "eslint-config-airbnb": "19.0.4",
    "esm-loader": "0.1.0",
    "esm-loader-css": "1.0.6",
    "esm-loader-typescript": "1.0.6",
    "express": "4.18.2",
    "husky": "^8.0.3",
    "jsdom": "23.2.0",
    "mocha": "10.2.0",
    "node-esm-loader": "0.3.0",
    "nodemon": "3.0.1",
    "postcss": "8.4.31",
    "postcss-cli": "10.1.0",
    "postcss-import": "15.1.0",
    "postcss-lit": "1.1.1",
    "postcss-load-config": "4.0.2",
    "postcss-loader": "7.3.3",
    "postcss-preset-env": "9.3.0",
    "reload": "^3.2.1",
    "sinon": "17.0.1",
    "stylelint": "16.0.2",
    "stylelint-config-standard": "35.0.0",
    "stylelint-no-browser-hacks": "1.2.1",
    "typescript": "5.3.3",
    "vite": "5.0.12"
  },
  "dependencies": {
    "cors": "2.8.5",
    "handlebars": "4.7.8",
    "vite-plugin-handlebars": "1.6.0"
  }
}
